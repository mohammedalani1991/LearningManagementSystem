@using LearningManagementSystem.Services.Helpers
@model DataEntity.Models.ViewModels.DetailsLookupViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Delete Detail Lookup"];
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@Localizer["Settings"] <small>@ViewData["Title"]</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <h3>@Localizer["Are you sure you want to delete this?"]</h3>
            <table class="table table-striped table-bordered">
                <tr>
                    <td>@Localizer["Name"]</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>@Localizer["Code"]</td>
                    <td>@Html.DisplayFor(model => model.Code)</td>
                </tr>
                <tr>
                    <td>@Localizer["Status"] </td>
                    <td>@LookupHelper.GetStatusById(Model.Status).Name</td>
                </tr>

                <tr>
                    <td>@Localizer["Created On"]</td>
                    <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>
                <tr>
                    <td>@Localizer["Created By"]</td>
                    <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>

            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value=@Localizer["Delete"] class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>
