@using LearningManagementSystem.Services.Helpers
@model DataEntity.Models.EfModels.EnrollCourseAllowUserRate
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="d-flex tms-page-popup-title">
            <div data-dismiss="modal" class="tms-close-div">
                <i class="fa fa-close"></i>
            </div>
            <div class="tms-table-popup-title" style="width:97%;">
                @Localizer["Delete Allow User Rate"]
            </div>
        </div>

        <div class="x_content">
            <table class="table tms-details">
                <tr>
                    <td class="tms-details-title">@Localizer["Id"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.Id)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Name"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.Contact.FullName)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Publish Date"]</td>
                    <td class="tms-details-data">@LookupHelper.GetLookupDetailsById(Model.RateTypeId??0,ViewBag.LangId) </td>
                </tr>                                                
                <tr>
                    <td class="tms-details-title">@Localizer["Created On"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Created By"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>
            </table>
            <div class="text-center">
                <button class="tms-delete-btn" type="button" onclick="ConfirmDeleteAllowUserRate(@Model.Id)"><i class="fa fa-trash"></i> @Localizer["Delete Allow User Rate"]</button>
            </div>
        </div>
    </div>
</div>


