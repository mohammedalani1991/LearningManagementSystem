@using LearningManagementSystem.Services.Helpers
@model DataEntity.Models.ViewModels.GeneralizationViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Delete"];
}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2><small>@Localizer["Delete"]</small></h2>
            <div class="nav navbar-right panel_toolbox" data-dismiss="modal">
                <i class="fa fa-close"></i>
            </div>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <h3>@Localizer["Are you sure you want to delete this?"]</h3>
            <table class="table table-striped table-bordered">
                <tr>
                    <td>@Localizer["Title"]</td>
                    <td>@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <td>@Localizer["Description"]</td>
                    <td>@Html.Raw(Model.Description)</td>
                </tr>
                <tr>
                    <td>@Localizer["Generalization Type"]</td>
                    <td>@LookupHelper.GetLookupDetailsById(Model.GeneralizationTypeId.GetValueOrDefault(0), ViewBag.LangId)?.Name</td>
                </tr>
                <tr>
                    <td>@Localizer["Job"]</td>
                    <td>@LookupHelper.GetLookupDetailsById(Model.JobId.GetValueOrDefault(0), ViewBag.LangId)?.Name</td>
                </tr>
                <tr>
                    <td>@Localizer["Branch"]</td>
                    <td>@LookupHelper.GetBrancheById(Model.BranchId.GetValueOrDefault(0), ViewBag.LangId).Name</td>
                </tr>
                <tr>
                    <td>@Localizer["Status"]</td>
                    <td>@LookupHelper.GetStatusById(Model.Status).Name</td>
                </tr>

                <tr>
                    <td>@Localizer["Created On"]</td>
                    <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>
                <tr>
                    <td>@Localizer["Created By"]</td>
                    <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>

            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="text-center">
                    <button data-dismiss="modal" class="btn btn-dark">@Localizer["Cancel"]</button>
                    <input type="button" onclick="ConfirmDelete(@Model.Id,@Model.Page)" value=@Localizer["Delete"] class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>