@using LearningManagementSystem.Services.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@model DataEntity.Models.ViewModels.SystemGroupViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Delete Group"];
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@Localizer["Groups"] <small>@ViewData["Title"]</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <h3>@Localizer["Are you sure you want to delete this?"]</h3>
            <table class="table table-striped table-bordered">
                <tr>
                    <td>@Localizer["Language"]</td>
                    <td>@Html.DisplayFor(model => model.LanguageId)</td>
                </tr>
                <tr>
                    <td>@Localizer["Name"]</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>@Localizer["Description"]</td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>

                <tr>
                    <td>@Localizer["Created By"]</td>
                    <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>
                <tr>
                    <td>@Localizer["Created On"]</td>
                    <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>
                <tr>
                    <td>@Localizer["Status"]</td>
                    <td>@LookupHelper.GetStatusById(Model.Status).Name</td>
                </tr>
            </table>

            <form method="post" action="/ControlPanel/SystemGroups/Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-actions no-color">
                    <input type="submit" value=@Localizer["Delete"] class="btn btn-danger" />
                </div>
            </form>           
        </div>
    </div>
</div>
