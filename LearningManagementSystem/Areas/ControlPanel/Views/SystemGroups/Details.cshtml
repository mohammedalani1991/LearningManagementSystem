@using LearningManagementSystem.Services.Helpers
@model DataEntity.Models.ViewModels.SystemGroupViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Groups Details"];
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@Localizer["Groups"] <small>@ViewData["Title"]</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-striped table-bordered">
                <tr>
                    <td>@Localizer["Language"]</td>
                    <td>@Html.DisplayFor(model => model.LanguageId)</td>
                </tr>
                <tr>
                    <td>@Localizer["Name"]</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>@Localizer["Description"]</td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <td>@Localizer["Created By"]</td>
                    <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>
                <tr>
                    <td>@Localizer["Created On"]</td>
                    <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>

                <tr>
                    <td>@Localizer["Status"]</td>
                    <td>@LookupHelper.GetStatusById(Model.Status).Name</td>
                </tr>
            </table>
        </div>
    </div>
</div>
