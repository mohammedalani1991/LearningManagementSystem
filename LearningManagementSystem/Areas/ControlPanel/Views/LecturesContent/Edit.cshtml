                            <!--begin::Repeater-->
                            <div id="LecturesContent_Repeater_Nested" class="Repeater_Nested">
                                <!--begin::Form group-->
                                <div class="form-group">
                                    <div data-repeater-list="LectureViewModel">
                                        @foreach (var Lecture in Model.LectureViewModel)
