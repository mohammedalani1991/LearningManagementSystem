                </tr>
                <tr>
                    <td>@Localizer["IdNumber"]</td>
                    <td>@Html.DisplayFor(model => model.ContactViewModel.IdNumber)</td>
                </tr>
                <tr>
                    <td>@Localizer["Status"]</td>
                    <td>@LookupHelper.GetStatusById(Model.ContactViewModel.Status)?.Name</td>
                </tr>
                <tr>
                    <td>@Localizer["Gender"]</td>
                    @if (Model.ContactViewModel.GenderId != null)
                    {
                        <td>@(LookupHelper.GetLookupDetailsById(Model.ContactViewModel.GenderId.Value, ViewBag.LangId)?.Name)</td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>

                <tr>
                    <td>@Localizer["Created On"]</td>
                    <td>@Html.DisplayFor(model => model.ContactViewModel.CreatedOn)</td>
                </tr>
                <tr>
                    <td>@Localizer["Choose Role"]</td>
                    <td>
                        <ol>
                            @if (Model.UserProfileViewModel?.Roles != null)
                            {
                                foreach (var item in Model.UserProfileViewModel?.Roles)
                                {
                                    <li>@item.Name</li>
                                }
                            }
                        </ol>
                    </td>
                </tr>
            </table>
        </div>
