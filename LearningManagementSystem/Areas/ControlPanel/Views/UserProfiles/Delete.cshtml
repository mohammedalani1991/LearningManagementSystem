@using LearningManagementSystem.Services.Helpers
@model DataEntity.Models.ViewModels.GeneralContactViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Delete Contact"];
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2> <small> @Localizer["Delete Contact"]</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <h3>@Localizer["Are you sure you want to delete this?"]</h3>

            <table class="table table-striped table-bordered">
                <tr>
                    <td>@Localizer["Full Name"]</td>
                    <td>@Html.DisplayFor(model => model.ContactViewModel.FullName)</td>
                </tr>
                <tr>
                    <td>@Localizer["Email"]</td>
                    <td>@Html.DisplayFor(model => model.ContactViewModel.Email)</td>
                </tr>
                <tr>
                    <td>@Localizer["Mobile"]</td>
