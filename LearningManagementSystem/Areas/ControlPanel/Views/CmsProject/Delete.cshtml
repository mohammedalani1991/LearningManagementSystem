@using LearningManagementSystem.Services.Helpers
@model DataEntity.Models.ViewModels.CmsProjectViewModel
@using LearningManagementSystem.Core.SystemEnums
@using System.Linq;


@using Microsoft.AspNetCore.Mvc.Localization
@using DataEntity.Models.ViewModels

@inject IViewLocalizer Localizer

@{
        List<SelectListItem> ss = LookupHelper.GetProjectCategoryList(ViewBag.LangId, Model.ProjectCategoryId);
}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="d-flex tms-page-popup-title">
            <div data-dismiss="modal" class="tms-close-div">
                <i class="fa fa-close"></i>
            </div>
            <div class="tms-table-popup-title" style="width:97%;">
                @Localizer["Delete CmsProjects"]
            </div>
        </div>

        <div class="x_content">
            <table class="table tms-details">
                <tr>
                    <td class="tms-details-title">@Localizer["Name"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.Name)</td>
                </tr>


                <tr>
                    <td class="tms-details-title">@Localizer["Short Description"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.ShortDescription)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Sort Order"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.SortOrder)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Show In Home Page"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.ShowInHomePage)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Project Cost"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.ProjectCost)</td>
                </tr>


                <tr>
                    <td class="tms-details-title">@Localizer["One Object Fees"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.OneObjectFees)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Category"]</td>
                    <td class="tms-details-data">@ss.FirstOrDefault().Text</td>
                </tr>

                <tr>
                    <td class="tms-details-title">@Localizer["Image Url"]</td>
                    <td class="tms-details-data">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <a href="javascript:;" class="tms-imageview-btn" onclick="ShowImageView('@Model.ImageUrl')" aria-haspopup="true" id="ImageViewer" data-toggle="dropdown" aria-expanded="false">
                                <img src="/img/search.png">
                            </a>
                        }
                    </td>
                </tr>

                <tr>
                    <td class="tms-details-title">@Localizer["Publish Date"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.PublishDate)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["End Date"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.EndDate)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Keywords"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.Keyword)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Description"]</td>
                    <td class="tms-details-data">
                        @Html.Raw(Model.Description)
                    </td>
                </tr>
             
                <tr>
                    <td class="tms-details-title">@Localizer["Created On"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Created By"]</td>
                    <td class="tms-details-data">@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>
                <tr>
                    <td class="tms-details-title">@Localizer["Status"]</td>
                    <td class="tms-details-data">@LookupHelper.GetStatusById(Model.Status).Name</td>
                </tr>
            </table>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <button class="tms-delete-btn" type="button" onclick="ConfirmDelete(@Model.Id)"><i class="fa fa-trash"></i> @Localizer["Delete Project"]</button>
                </div>
            }
        </div>
    </div>
</div>
