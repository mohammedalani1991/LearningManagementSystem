@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ForgotPasswordConfirmation


@{
    Layout = "~/Views/Shared/_LayoutAnonymous.cshtml";
    ViewData["Title"] = "Forgot password confirmation";
}



<div class="container-fluid mtb-center">
    <div class="row justify-content-center align-items-center ">
        <div class="px-139 w-login bg-white">
            <h3 class="Forgot text-center">  @Localizer["Forgot password confirmation?"]</h3>
            <p class="Forgot-sup text-center">
                @Localizer["Please check your email to reset your password."]
            </p>

            <div class="row p-0">

                <div class="text-center">
                    <p>
                        <a class="form-label" asp-area="Identity" asp-controller="Account" asp-action="Login">@Localizer["Back to Log in"]</a>
                    </p>


                </div>
            </div>

        </div>
    </div>
</div>